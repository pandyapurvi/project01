
<h1>Reviews</h1>
<%= form_for @review do |f| %>
<div class="review-page">
<%= f.label :username %>
<%= f.text_field :username,:class=>"user-review" %>

<%= f.label :comment %>
<%= f.text_field :comment,:class=>"user-review" %>

<%= f.label :rating %>
<%= f.number_field :rating,:class=>"user-review", :min => "1", :max => "5" %><i class="fa fa-star-o"></i>

<%= f.label :car_id %>
<%= f.select :car_id, Car.pluck(:name,:id),:include_blank => true %>
<br>
<%= f.submit :class=> "bttn btn-orange" %>
</div>
<% end %>
<div class="controls">
  <% if @current_user.admin? %>
  <%= link_to 'Edit Review', reviews_path(@review.id) %>
  <%= link_to 'Delete Review', reviews_path(@review.id), :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
  <% end %>

</div>
