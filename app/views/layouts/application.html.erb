<!DOCTYPE html>
<html>
  <head>
    <title>Project01</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="login">
    <header class="header">
  <div class="welcome">
  <%= link_to 'Home', root_path %>

  <% if @current_user.present? %>
  <% if @current_user.admin? %>
  <%= link_to "All user", users_path %>
  <% end %>
  <%= link_to "Sign Out, #{ @current_user.email}", login_path, :method => 'delete', :class => "link btn-blue" %>
  <%= link_to 'BRANDS', brands_path, :class => "link btn-blue" %>
  <%= link_to 'MODELS', models_path, :class => "link btn-blue"%>
  <%= link_to 'CARS', cars_path, :class => "link btn-blue" %>
  <%= link_to 'REVIEWS', new_review_path, :class => "link btn-blue" %>

  </div>
  </header>

  <% else %>
  <div class="home">
           <div class="logo-box">
               <img src="/app/assets/images/logo.png" alt="logo" class="logo">
           </div>
           <div class="text-box">
           <h1 class="heading-primary">
               <span class="heading-primary-main">CarSales</span>
               <span class="heading-primary-sub">Find your next car</span>
           </h1>
           <%= link_to 'Sign Up', new_user_path, :class => "btn btn-white btn-animation" %>
             <%= link_to 'Sign In',login_path, :class => "btn btn-white btn-animation"  %>
           </div>
       </div>

  <% end  %>

</nav>


    <%= yield %>
  </body>
</html>
